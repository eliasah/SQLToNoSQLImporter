<?xml version="1.0" encoding="UTF-8"?>

<dataConfig>
	<!-- PostgreSQL config -->
	<!-- <dataSource driver="org.postgresql.Driver" url="jdbc:postgresql://localhost/testing" 
		user="postgres" password="testing" batch-size="-1" /> -->

	<!-- MySQL config -->
	<dataSource type="JdbcDataSource" driver="com.mysql.jdbc.Driver"
		url="jdbc:mysql://127.0.0.1/products_fr" user="root" password="root"
		batch-size="-1" />

	<!-- MySQL Schema -->
	<document>
		<entity name="PRODUCTS"
			query="SELECT id,title,description,comparatorCategory 
		FROM PRODUCTS WHERE title like '%iphone%';">
			<field column="id" name="title" type="integer" />
			<field column="title" name="title" type="string" />
			<field column="description" name="description" type="string" />
			<field column="comparatorCategory" name="category" type="string" />
		</entity>

		<entity name="PRODUCTS"
			query="SELECT id,title,description,comparatorCategory 
		from PRODUCTS LIMIT 20000;">
			<field column="id" name="title" type="integer" />
			<field column="title" name="title" type="string" />
			<field column="comparatorCategory" name="category" type="string" />
			<field column="description" name="description" type="string" />
		</entity>
	</document>
</dataConfig>